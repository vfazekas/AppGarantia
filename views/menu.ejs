<!DOCTYPE html>
<html>
<head>
  <title>Menu Pateo <%= info.Role  %></title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <style>

@import url('https://fonts.googleapis.com/css2?family=Courier+Prime&display=swap');
body {
  margin: 0px;
  padding: 0px;
  font-family: "Courier Prime", monospace;
  background-color: #fdfdfe;
}


 h1 {
  font-size: 35px;
  font-weight: 500;
  color: #553c9a;
  white-space: nowrap;
  overflow: hidden;
}


     h4 {
      padding-top: 20px;
      text-align: center;
      padding-bottom: 20px;
    }
    
    #sidePage {
      position: relative;
      z-index: 0;
      text-align: center;
    }
    
    #sidePage::before {
      content: "";
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-image: url('background.jpg');
      background-size: cover;
      background-position: center;
      opacity: 0.4; /* Adjust the opacity value as needed */
      z-index: -1;
    }
    
    .sidebar {
      background-color: #f8f9fa;
      height: 100vh;
      width: 200px;
    }
    
    .content {
      padding: 20px;
    }
    
    .centered-title {
      text-align: center;
    }
  </style>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-3 sidebar">
        <h4>Menu <%= info.Filial %></h4>
        <ul class="nav flex-column">
          <li class="nav-item">
            <a class="nav-link" href='/consultor' >
              <img src="warning.gif" alt="Consultor Icon" width="35" height="35">
               Erro consultor
              </a>    
            </li>
          <li class="nav-item">
            <a class="nav-link" href="/tecnico" >
              <img src="warning.gif" alt="Técnico Icon" width="35" height="35">
                Erro técnico
              </a>  
          </li>
          <li class="nav-item">
           <a class="nav-link" href="/adduser" id="add_user" hidden>
             <img src="profile.gif" alt="Add User Icon" width="35" height="35">
               Add usuário
             </a>  
         </li>
         <li class="nav-item">
          <a class="nav-link"  href="/dashboard" >
            <img src="line-chart.gif" alt="Dash Icon" width="35" height="35">
              DashBoard
            </a>  
        </li>
        </ul>
      </div>
      <div class="col-sm-9 content" id="sidePage">
        <div class="header">
          <h1 class="ml-5">Seja Bem Vindo  <b><%= info.Name  %></b>!</h1> 
        </div>        
      </div>
    </div>
  </div>
<script>
    var role = '<%= info.Role %>';


   window.onload = function () {
    const addUser = document.getElementById('add_user');
    if (role === 'admin') {
      addUser.hidden = false;
    }else return;
};

</script>
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
